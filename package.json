{
	"name": "cwrc-git-writer",
	"version": "0.0.0",
	"description": "xml editing and rdf annotation using github as document store",
	"keywords": [
		"xml",
		"rdf",
		"editor",
		"annotation"
	],
	"homepage": "https://github.com/cwrc/CWRC-GitWriter",
	"bugs": {
		"url": "https://github.com/cwrc/CWRC-GitWriter/issues"
	},
	"license": "GPL-2.0",
	"contributors": [
		"Andrew MacDonald <andrewjames.code@gmail.com>",
		"James Chartrand <jc.chartrand@gmail.com>",
		"Luciano Frizzera <lucaju@gmail.com>"
	],
	"repository": {
		"type": "git",
		"url": "https://github.com/cwrc/CWRC-GitWriter.git"
	},
	"scripts": {
		"start": "env-cmd -e production node ./server/server.js",
		"dev-server:middleware-server": "env-cmd -e development nodemon -L ./server/index.mjs",
		"dev:webpack-writer": "env-cmd -e development --use-shell \"npm run dev:build-editor-css-dev & webpack\"",
		"dev:webpack-writer-worker": "env-cmd -e development-worker --use-shell \"npm run dev:build-editor-css-dev & webpack\"",
		"dev:build-editor-css-dev": "cd \"node_modules/cwrc-writer-base\" && npm run build-editor-css-dev",
		"build": "env-cmd -e production --use-shell \"npm run build:cwrc-writer-base && webpack && npm run copy:mockup-ui\"",
		"build:cwrc-writer-base": "cd \"node_modules/cwrc-writer-base\" && npm run build",
		"copy:mockup-ui": "copyfiles -u 1 mockup-ui/* mockup-ui/**/* dist/mockup-ui",
		"stats": "webpack --profile --json > stats.json",
		"analyzer": "webpack-bundle-analyzer stats.json",
		"cm": "git-cz"
	},
	"dependencies": {
		"cwrc-git-dialogs": "github:cwrc/cwrc-git-dialogs#development",
		"cwrc-public-entity-dialogs": "github:cwrc/CWRC-PublicEntityDialogs#development",
		"cwrc-writer-base": "github:cwrc/CWRC-WriterBase#worker-validator",
		"dbpedia-entity-lookup": "github:cwrc/dbpedia-entity-lookup#development",
		"env-cmd": "^10.1.0",
		"express": "^4.17.1",
		"geonames-entity-lookup": "github:cwrc/geonames-entity-lookup#development",
		"getty-entity-lookup": "github:cwrc/getty-entity-lookup#development",
		"lgpn-entity-lookup": "github:cwrc/lgpn-entity-lookup#development",
		"viaf-entity-lookup": "github:cwrc/viaf-entity-lookup#development",
		"wikidata-entity-lookup": "github:cwrc/wikidata-entity-lookup#development"
	},
	"devDependencies": {
		"@babel/core": "^7.14.6",
		"@babel/eslint-parser": "^7.14.7",
		"@babel/plugin-syntax-dynamic-import": "^7.8.3",
		"@babel/plugin-transform-react-jsx": "^7.14.5",
		"@babel/plugin-transform-runtime": "^7.14.5",
		"@babel/preset-env": "^7.14.7",
		"@babel/preset-react": "^7.14.5",
		"@babel/runtime-corejs3": "^7.14.7",
		"@types/jquery": "^3.5.6",
		"@types/js-cookie": "^2.2.7",
		"@types/react-dom": "^17.0.9",
		"@types/uuid": "^8.3.1",
		"@types/webpack-env": "^1.16.2",
		"babel-loader": "^8.2.2",
		"babel-loader-exclude-node-modules-except": "^1.2.1",
		"clean-webpack-plugin": "^4.0.0-alpha.0",
		"commitizen": "^4.2.4",
		"copy-webpack-plugin": "^9.0.1",
		"copyfiles": "^2.4.1",
		"css-loader": "^6.0.0",
		"css-minimizer-webpack-plugin": "^3.0.2",
		"eslint": "^7.30.0",
		"eslint-config-prettier": "^8.3.0",
		"eslint-plugin-prettier": "^3.4.0",
		"git-cz": "^4.7.6",
		"html-webpack-plugin": "^5.3.2",
		"less": "^4.1.1",
		"less-loader": "^10.0.1",
		"less-watch-compiler": "^1.16.2",
		"mini-css-extract-plugin": "^2.1.0",
		"nodemon": "^2.0.12",
		"prettier": "^2.3.2",
		"process": "^0.11.10",
		"svg-inline-loader": "^0.8.2",
		"terser-webpack-plugin": "^5.1.4",
		"ts-loader": "^9.2.3",
		"typescript": "^4.3.5",
		"webpack": "^5.45.0",
		"webpack-bundle-analyzer": "^4.4.2",
		"webpack-cli": "^4.7.2",
		"webpack-dev-middleware": "^5.0.0",
		"webpack-dev-server": "^3.11.2",
		"webpack-hot-middleware": "^2.25.0",
		"webpackbar": "^5.0.0-3",
		"worker-loader": "^3.0.8"
	}
}
